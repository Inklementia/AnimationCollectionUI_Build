<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Application with Microservices</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/content/bootstrap.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/content/site.css">
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light my-4 border-0">

                @Html.ActionLink("AnimationCollection", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("About", "Index", "Home", new { area = "" }, new { @class = "nav-link" })

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Animations", "Index", "Animation", new { area = "" }, new { @class = "nav-link" })


                        </li>

                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a href="https://github.com/Inklementia/AnimationCollectionAPI" target="_blank" class="nav-link text-white btn btn-info ms-2"><i class="fab fa-github pe-2"></i><strong>Github API</strong></a>
                        </li>
                        <li class="nav-item ">
                            <a href="https://github.com/Inklementia/AnimationCollectionUI" target="_blank" class="nav-link btn btn-warning ms-2"><i class="fab fa-github pe-2"></i><strong>Github UI</strong></a>
                        </li>
                        <li class="nav-item ">
                            <a href="https://github.com/Inklementia/AnimationCollectionUI_Build" target="_blank" class="nav-link btn btn-warning ms-2"><i class="fab fa-github pe-2"></i><strong>Github UI Build</strong></a>
                        </li>
                        <li class="nav-item ">
                            <a href="https://inklementia.github.io/uni/dscc/api/" target="_blank" class="nav-link text-white btn btn-success ms-2"><i class="fas fa-file pe-2"></i><strong>API Documentation</strong></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web Application with Microservices</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
        function getId(url) {
            var regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
            var match = url.match(regExp);

            if (match && match[2].length == 11) {
                return match[2];
            } else {
                return 'error';
            }
        }
        $('.youtube-link').each(function () {

            var myId = getId($(this).html());
            $(this).next().attr('src', "//www.youtube.com/embed/" + myId + "");
            $(this).remove();
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
