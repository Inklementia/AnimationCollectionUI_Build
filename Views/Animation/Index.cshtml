@model IEnumerable<AnimationCollectionUI.Models.Animation>

@{
    ViewBag.Title = "Index";
}
<div class="d-flex align-items-center justify-content-between">
    <h2>Collection</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-danger" })
    </p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card mb-4" data-aos="fade-up" style="width: 100%">
                <span class="youtube-link">@Html.DisplayFor(modelItem => item.Link)</span>
                <iframe width="100%" height="220" src="" class="youtube-frame card-image-top"
                        title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                <div class="card-body">
                    <h5 class="card-title">   @Html.DisplayFor(modelItem => item.Title)</h5>
                    <strong class="text-info">by @Html.DisplayFor(modelItem => item.Author)</strong>
                    <p class="card-text">  @Html.DisplayFor(modelItem => item.Description)</p>
                    <div class="d-flex justify-content-between">

                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })   
                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    }
    </div>

