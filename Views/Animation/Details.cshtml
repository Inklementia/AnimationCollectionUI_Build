@model AnimationCollectionUI.Models.Animation

@{
    ViewBag.Title = "Details";
}


<div class="row justify-content-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">  @Html.ActionLink("Animations", "Index", "Animation", new { area = "" })</li>
            <li class="breadcrumb-item active" aria-current="page">  @Html.DisplayFor(model => model.Title)</li>
        </ol>
    </nav>
    <div class="col-lg-8">
        <span class="youtube-link">@Html.DisplayFor(model => model.Link)</span>
        <iframe width="100%" height="450" src="" class="youtube-frame"
                title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        <div class="text-center mt-3 d-flex flex-column align-items-center">
            <h3>  @Html.DisplayFor(model => model.Title)</h3>
            <strong class="text-info">by   @Html.DisplayFor(model => model.Author)</strong>
            <p class="col-lg-8 mt-1">   @Html.DisplayFor(model => model.Description)</p>
            <div class="d-flex align-items-center mb-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info  me-2" })
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>

</div>

