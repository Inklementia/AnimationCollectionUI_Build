@model AnimationCollectionUI.Models.Animation

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Animation</h2>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <div class="row justify-content-start">
        <div class="col-lg-8">
            <span class="youtube-link">@Html.DisplayFor(model => model.Link)</span>
            <iframe width="320" height="200" src="" class="youtube-frame"
                    title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            <div class=" mt-2">
                <h3>  @Html.DisplayFor(model => model.Title)</h3>
                <strong class="text-info">by   @Html.DisplayFor(model => model.Author)</strong>
                <p class="col-lg-8">   @Html.DisplayFor(model => model.Description)</p>
               
            </div>
        </div>

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color d-flex align-items-center">
            <input type="submit" value="Delete" class="btn btn-danger me-2 mb-0" /> 
            @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
